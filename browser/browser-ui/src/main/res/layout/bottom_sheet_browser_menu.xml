<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/keyline_4">

        <LinearLayout
            android:id="@+id/menuItemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menuActionItemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/keyline_4"
                android:paddingTop="@dimen/keyline_2"
                android:paddingBottom="@dimen/keyline_3">

                <com.duckduckgo.common.ui.view.MenuActionButtonView
                    android:id="@+id/forwardMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:menuActionLabel="@string/browserMenuForward"
                    app:menuActionSrc="@drawable/ic_arrow_right_24" />

                <com.duckduckgo.common.ui.view.MenuActionButtonView
                    android:id="@+id/refreshMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:menuActionLabel="@string/browserMenuRefresh"
                    app:menuActionSrc="@drawable/ic_reload_24" />

                <com.duckduckgo.common.ui.view.MenuActionButtonView
                    android:id="@+id/newTabMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:menuActionLabel="@string/browserMenuNewTab"
                    app:menuActionSrc="@drawable/ic_add_24" />

                <com.duckduckgo.common.ui.view.MenuActionButtonView
                    android:id="@+id/newDuckChatTabMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:menuActionLabel="@string/browserMenuNewChat"
                    app:menuActionSrc="@drawable/ic_ai_chat_add_16" />

                <com.duckduckgo.common.ui.view.MenuActionButtonView
                    android:id="@+id/settingsMenuItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:menuActionLabel="@string/browserMenuSettings"
                    app:menuActionSrc="@drawable/ic_settings_24" />
            </LinearLayout>

            <com.duckduckgo.common.ui.view.divider.HorizontalDivider
                android:id="@+id/urlPageActionsSectionDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:defaultPadding="true"
                app:fullWidth="false" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/addBookmarksMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_bookmark_16"
                app:primaryText="@string/browserMenuAddBookmark" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/sharePageMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_share_android_16"
                app:primaryText="@string/browserMenuShare" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/addToHomeMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_add_to_home_16"
                app:primaryText="@string/browserMenuAddToHome" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/findInPageMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_find_in_page_16"
                app:primaryText="@string/browserMenuFindInPage" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/changeBrowsingModeMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_device_desktop_16"
                app:primaryText="@string/browserMenuDesktopSite" />

            <com.duckduckgo.common.ui.view.divider.HorizontalDivider
                android:id="@+id/librarySectionDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:defaultPadding="true"
                app:fullWidth="false" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/bookmarksMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/browserMenuBookmarks"
                app:iconDrawable="@drawable/ic_bookmarks_16"
                app:primaryText="@string/browserMenuBookmarks" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/autofillMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_key_16"
                app:primaryText="@string/browserMenuAutofill" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/downloadsMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_downloads_16"
                app:primaryText="@string/browserMenuDownloads" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/duckChatHistoryMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_list_24"
                app:primaryText="@string/browserMenuChatHistory" />

            <com.duckduckgo.common.ui.view.divider.HorizontalDivider
                android:id="@+id/privacyToolsSectionDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:defaultPadding="true"
                app:fullWidth="false" />

            <include
                android:id="@+id/includeVpnMenuItem"
                layout="@layout/view_menu_item_vpn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/createAliasMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_email_16"
                app:primaryText="@string/browserMenuEmailAlias" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/fireproofWebsiteMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_fireproof_solid_16"
                app:primaryText="@string/browserMenuFireproofSite" />

            <com.duckduckgo.common.ui.view.divider.HorizontalDivider
                android:id="@+id/utilitiesSectionDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:defaultPadding="true"
                app:fullWidth="false" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/reportBrokenSiteMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_feedback_blank_16"
                app:primaryText="@string/browserMenuReportBrokenSite" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/privacyProtectionMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_shield_disabled_16"
                app:primaryText="@string/browserMenuEnablePrivacyProtection" />

            <com.duckduckgo.common.ui.view.MenuItemView
                android:id="@+id/printPageMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:iconDrawable="@drawable/ic_print_16"
                app:primaryText="@string/browserMenuPrint" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>