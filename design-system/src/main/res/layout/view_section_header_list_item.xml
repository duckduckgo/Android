<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/sectionHeaderListItemHeight"
    android:orientation="horizontal">

    <com.duckduckgo.common.ui.view.text.DaxTextView
        android:id="@+id/sectionHeaderText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_4"
        android:layout_marginEnd="@dimen/keyline_4"
        android:layout_weight="1"
        app:typography="h4"
        tools:text="Title Text" />

    <com.duckduckgo.common.ui.view.button.IconButton
        android:id="@+id/sectionHeaderOverflowIcon"
        android:layout_width="@dimen/sectionHeaderListItemImageSize"
        android:layout_height="@dimen/sectionHeaderListItemImageSize"
        android:layout_marginEnd="@dimen/sectionHeaderListItemImagePadding"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_menu_vertical_24"
        tools:ignore="ContentDescription" />

</LinearLayout>