<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/keyline_4"
    android:paddingBottom="@dimen/keyline_4"
    android:orientation="vertical">

    <com.duckduckgo.common.ui.view.text.DaxTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textType="secondary"
        app:typography="body2"
        android:padding="@dimen/keyline_4"
        android:text="@string/sync_off_hint"/>

    <com.duckduckgo.common.ui.view.listitem.SectionHeaderListItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/sync_setup_quick_connect_title"/>

    <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
        android:id="@+id/sync_setup_scan_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingIconBackground="circular"
        app:leadingIcon="@drawable/ic_sync_device_all_24"
        app:primaryText="@string/sync_setup_quick_primary_cta_title"
        app:secondaryText="@string/sync_setup_quick_primary_cta_subtitle"/>

    <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
        android:id="@+id/sync_setup_enter_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingIconBackground="circular"
        app:leadingIcon="@drawable/ic_keyboard_24"
        app:primaryText="@string/sync_setup_quick_secondary_cta_title"
        app:secondaryText="@string/sync_setup_quick_secondary_cta_subtitle"/>

    <com.duckduckgo.common.ui.view.divider.HorizontalDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.duckduckgo.common.ui.view.listitem.SectionHeaderListItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/sync_setup_single_device_title"/>

    <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
        android:id="@+id/sync_setup_initialize_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingIconBackground="circular"
        app:leadingIcon="@drawable/ic_start_stop_24"
        app:primaryText="@string/sync_setup_single_device_primary_cta_title"
        app:secondaryText="@string/sync_setup_single_device_primary_cta_subtitle"/>

    <com.duckduckgo.common.ui.view.divider.HorizontalDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
        android:id="@+id/sync_setup_recover_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingIconBackground="circular"
        app:leadingIcon="@drawable/ic_document_replace_24"
        app:primaryText="@string/sync_setup_single_device_secondary_cta_title"
        app:secondaryText="@string/sync_setup_single_device_secondary_cta_subtitle"/>

    <com.duckduckgo.common.ui.view.text.DaxTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/keyline_4"
        app:textType="secondary"
        app:typography="body2"
        android:text="@string/sync_off_encrypted_hint"/>

</LinearLayout>
