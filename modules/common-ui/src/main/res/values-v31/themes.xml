<resources>
    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">?attr/colorControlHighlight</item>

        <item name="android:windowSplashScreenBackground">@color/whiteFive</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_dax_splash_screen_icon</item>
        <item name="android:windowSplashScreenAnimationDuration">800</item>
    </style>
</resources>
