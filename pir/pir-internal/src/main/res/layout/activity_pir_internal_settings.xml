<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Widget.DuckDuckGo.ToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/daxColorSurface"
            android:theme="@style/Widget.DuckDuckGo.ToolbarTheme"
            app:popupTheme="@style/Widget.DuckDuckGo.PopUpOverflowMenu" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/keyline_4"
            android:orientation="vertical">

            <com.duckduckgo.common.ui.view.listitem.SectionHeaderListItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:primaryText="@string/pirDevHeader" />

            <com.duckduckgo.common.ui.view.button.DaxButtonPrimary
                android:id="@+id/debugRunScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pirDevRunSimpleScan" />


            <com.duckduckgo.common.ui.view.button.DaxButtonPrimary
                android:id="@+id/debugForceKill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pirDevForceKill" />

            <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
                android:id="@+id/debugTotalToProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/pirStatsTotalHeader"/>

            <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
                android:id="@+id/debugStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/pirStatsStatusHeader"/>

            <com.duckduckgo.common.ui.view.divider.HorizontalDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.duckduckgo.common.ui.view.listitem.SectionHeaderListItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:primaryText="@string/pirDevSimpleScanHeader" />

            <com.duckduckgo.common.ui.view.text.DaxTextView
                android:id="@+id/simpleScanResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>