<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Widget.DuckDuckGo.ToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/daxColorToolbar"
            android:theme="@style/Widget.DuckDuckGo.ToolbarTheme"
            app:popupTheme="@style/Widget.DuckDuckGo.PopUpOverflowMenu" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/keyline_4">

        <com.duckduckgo.common.ui.view.listitem.SectionHeaderListItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:primaryText="@string/pirDevBrokerConfigSelectBroker" />

        <Spinner
            android:id="@+id/brokerSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/keyline_4" />

        <com.duckduckgo.common.ui.view.listitem.SectionHeaderListItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:primaryText="@string/pirDevBrokerConfigJsonInput" />

        <com.duckduckgo.common.ui.view.text.DaxTextInput
            android:id="@+id/brokerJsonInput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minLines="10"
            android:hint="@string/pirDevBrokerConfigJsonHint"
            android:padding="@dimen/keyline_2"
            app:editable="true"
            app:type="multi_line" />

        <com.duckduckgo.common.ui.view.text.DaxTextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_2"
            android:textColor="?attr/daxColorDestructive"
            android:visibility="gone" />

    </LinearLayout>

    <com.duckduckgo.common.ui.view.button.DaxButtonPrimary
        android:id="@+id/updateConfigButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/keyline_4"
        android:layout_marginTop="@dimen/keyline_4"
        android:text="@string/pirDevBrokerConfigUpdate" />

    <com.duckduckgo.common.ui.view.button.DaxButtonSecondary
        android:id="@+id/resetAllConfigsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/keyline_4"
        android:text="@string/pirDevBrokerConfigResetAll" />

</LinearLayout>
