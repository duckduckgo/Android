<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".waitlist.NetPInviteCodeActivity">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/include_default_toolbar" />

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/keyline_5"
                android:orientation="vertical"
        >

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_lock"
                tools:ignore="ContentDescription" />

            <com.duckduckgo.mobile.android.ui.view.text.DaxTextView
                android:id="@+id/statusTitle"
                app:typography="h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_4"
                android:text="@string/netpWaitlistTitle"
                android:textAlignment="center"
            />

            <com.duckduckgo.mobile.android.ui.view.text.DaxTextView
                android:id="@+id/waitlistDescription"
                app:typography="body1"
                app:textType="secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_4"
                android:text="@string/netpWaitlistInBetaDescription"
                android:textAlignment="center"
            />

            <LinearLayout
                android:id="@+id/waitlistDescriptionItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/keyline_5"
            >
                <com.duckduckgo.networkprotection.impl.waitlist.WaitlistCheckListItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:primaryText="Everyday protection for everything you do online"
                        app:secondaryText="Network Protection uses the WireGuard protocol to secure all your network activity across your device, protecting your browsing, app activity and beyond."/>

                <com.duckduckgo.networkprotection.impl.waitlist.WaitlistCheckListItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:primaryText="Fast, reliable and easy to use"
                        app:secondaryText="Network Protection comes built-in to the DuckDuckGo browser. Connect to the nearest with one click."/>

                <com.duckduckgo.networkprotection.impl.waitlist.WaitlistCheckListItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:primaryText="No logging y default"
                        app:secondaryText="Unlike other VPNs, we do not store logs of your data. It's in our Privacy Policy."/>

            </LinearLayout>

            <com.duckduckgo.mobile.android.ui.view.button.DaxButtonPrimary
                android:id="@+id/getStartedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_6"
                android:text="@string/netpWaitlistGetStartedCta"
                app:buttonSize="large"
            />

            <com.duckduckgo.mobile.android.ui.view.button.DaxButtonSecondary
                android:id="@+id/enterCodeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_6"
                android:text="@string/netpEnterCode"
                app:buttonSize="large"
            />

        </LinearLayout>

    </ScrollView>
</LinearLayout>



