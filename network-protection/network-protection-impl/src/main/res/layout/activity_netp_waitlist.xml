<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".waitlist.NetPWaitlistInvitedActivity">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/include_default_toolbar" />

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/keyline_5"
                android:paddingStart="@dimen/keyline_5"
                android:paddingTop="@dimen/keyline_5"
                android:paddingBottom="@dimen/keyline_5"
        >

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_lock"
                tools:ignore="ContentDescription" />

            <com.duckduckgo.mobile.android.ui.view.text.DaxTextView
                android:id="@+id/statusTitle"
                app:typography="h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_5"
                android:text="@string/netpBetaFeature"
                android:textAlignment="center"
            />

            <com.duckduckgo.mobile.android.ui.view.text.DaxTextView
                android:id="@+id/waitlistDescription"
                app:typography="body1"
                app:textType="secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_4"
                android:text="@string/netpBetaFeatureByline"
                android:textAlignment="center"
            />

            <LinearLayout
                    android:id="@+id/waitlistDescriptionItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/keyline_4"
                    android:paddingTop="@dimen/keyline_2"
            >
                <com.duckduckgo.networkprotection.impl.waitlist.WaitlistCheckListItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:leadingIcon="@drawable/ic_join_24"
                        app:primaryText="@string/netpWaitlistDescriptionItemTitle_1"
                        app:secondaryText="@string/netpWaitlistDescriptionItemByline_1"/>

                <com.duckduckgo.networkprotection.impl.waitlist.WaitlistCheckListItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:leadingIcon="@drawable/ic_timer_24"
                        app:primaryText="@string/netpWaitlistDescriptionItemTitle_2"
                        app:secondaryText="@string/netpWaitlistDescriptionItemByline_2"/>

                <com.duckduckgo.networkprotection.impl.waitlist.WaitlistCheckListItem
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:leadingIcon="@drawable/ic_gift_24"
                        app:primaryText="@string/netpWaitlistDescriptionItemTitle_3"
                        app:secondaryText="@string/netpWaitlistDescriptionItemByline_3"/>

            </LinearLayout>

            <FrameLayout
                    android:id="@+id/waitlistNotifyMeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keyline_5"
                    android:visibility="gone">

                <com.duckduckgo.mobile.android.ui.notifyme.NotifyMeView
                        android:id="@+id/waitlistNotifyMe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:primaryText="@string/netpWaitlistNotifyMeTitle"
                        app:secondaryText="@string/netpWaitlistNotifyMeByline"
                        app:dismissIcon="false"
                        app:contentOrientation="center"
                        app:sharedPrefsKeyForDismiss="key_component_dismissed_in_windows_waitlist" />
            </FrameLayout>

            <com.duckduckgo.mobile.android.ui.view.button.DaxButtonPrimary
                android:id="@+id/joinWaitlistButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_6"
                android:text="@string/netpJoinWaitlist"
                app:buttonSize="large"
            />

            <com.duckduckgo.mobile.android.ui.view.button.DaxButtonSecondary
                android:id="@+id/enterInviteCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_2"
                android:text="@string/netpEnterCode"
                android:visibility="gone"
                app:buttonSize="large"
            />

        </LinearLayout>

    </ScrollView>
    <com.duckduckgo.mobile.android.ui.view.text.DaxTextView
            android:id="@+id/disclaimerFooter"
            app:typography="caption"
            app:textType="secondary"
            android:paddingTop="@dimen/keyline_2"
            android:paddingBottom="@dimen/keyline_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/netpBetaDisclaimerFooter"
    />
</LinearLayout>



