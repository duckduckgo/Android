<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.duckduckgo.subscriptions.impl.ui.AddDeviceActivity">

    <include
            android:id="@+id/includeToolbar"
            layout="@layout/include_default_toolbar"/>

    <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/headerImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/keyline_5"
                    app:srcCompat="@drawable/ic_sync_desktop"
                    tools:ignore="ContentDescription" />

            <com.duckduckgo.common.ui.view.text.DaxTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keyline_5"
                    android:layout_marginStart="@dimen/keyline_5"
                    android:layout_marginEnd="@dimen/keyline_5"
                    android:textAlignment="center"
                    app:typography="h1"
                    android:text="@string/addDeviceTitle"
                    tools:ignore="HardcodedText"/>

            <com.duckduckgo.common.ui.view.text.DaxTextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/keyline_5"
                    android:textAlignment="center"
                    app:typography="body1"
                    app:textType="secondary"
                    android:text="@string/addDeviceDescription"
                    tools:ignore="HardcodedText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_5"
                android:layout_marginTop="@dimen/keyline_5"
                android:layout_marginEnd="@dimen/keyline_5"
                android:layout_marginBottom="@dimen/keyline_5"
                android:background="@drawable/background_expandable_menu"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/keyline_5"
                android:paddingTop="@dimen/keyline_5"
                android:paddingBottom="@dimen/keyline_4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/emailIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        app:srcCompat="@drawable/ic_email_16"
                        tools:ignore="ContentDescription" />

                    <com.duckduckgo.common.ui.view.text.DaxTextView
                        android:id="@+id/emailTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/keyline_2"
                        android:text="@string/addDeviceEmail"
                        app:textType="primary"
                        app:typography="h3" />

                </LinearLayout>

                <com.duckduckgo.common.ui.view.text.DaxTextView
                    android:id="@+id/emailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keyline_2"
                    android:visibility="gone"
                    app:textType="primary"
                    app:typography="h3"
                    tools:text="john.smith@duck.com"
                    tools:visibility="visible"/>

                <com.duckduckgo.common.ui.view.text.DaxTextView
                    android:id="@+id/emailSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keyline_2"
                    android:text="@string/addEmail"
                    app:textType="secondary"
                    app:typography="body2" />

                <com.duckduckgo.common.ui.view.button.DaxButtonPrimary
                    android:id="@+id/emailButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keyline_3"
                    android:text="@string/addEmailText" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
