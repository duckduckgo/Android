<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/transparent"
    tools:background="@color/black30"
    tools:ignore="InvalidColorAttribute">

    <ImageView
        android:id="@+id/closeIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/keyline_4"
        android:alpha="0"
        android:contentDescription="@string/cdClose"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_24_solid_color"
        app:tint="@color/white"
        tools:ignore="InvalidColorAttribute" />

    <ImageView
        android:id="@+id/enlargedLogoImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/keyline_5"
        android:layout_marginVertical="@dimen/keyline_5"
        android:contentDescription="@null"
        android:padding="@dimen/keyline_2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="264dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="264dp"
        tools:src="@drawable/ic_ddg_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>