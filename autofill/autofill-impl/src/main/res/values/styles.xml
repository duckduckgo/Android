<resources>

    <style name="AutofillBottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AutofillBottomSheetStyle</item>
    </style>

    <style name="AutofillBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_draggable">false</item>
    </style>

    <style name="AutofillDialogRootViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/rounded_top_corners_bottom_sheet_background</item>
        <item name="android:paddingBottom">30dp</item>
    </style>

    <style name="AutofillDialogFaviconStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="AutofillDialogCloseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginEnd">11dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:contentDescription">@string/autofillDialogCloseButtonContentDescription</item>
        <item name="android:importantForAccessibility">yes</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_close_24</item>
    </style>

    <style name="AutofillDialogContentGuidelineStart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.1</item>
    </style>

    <style name="AutofillDialogContentGuidelineEnd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.9</item>
    </style>

</resources>