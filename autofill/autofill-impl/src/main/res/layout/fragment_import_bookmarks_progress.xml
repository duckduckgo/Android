<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/autofillDialogContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            style="@style/AutofillDialogContentGuidelineStart" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            style="@style/AutofillDialogContentGuidelineEnd" />

        <FrameLayout
            android:id="@+id/progressContainer"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_marginTop="@dimen/keyline_5"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/progressSpinner"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:indeterminate="true" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/importIcon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter"
                android:src="@drawable/bookmarks_import_128" />

        </FrameLayout>

        <com.duckduckgo.common.ui.view.text.DaxTextView
            android:id="@+id/dialogTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_5"
            android:breakStrategy="balanced"
            android:gravity="center_horizontal"
            android:text="@string/importBookmarksProgressTitle"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/progressContainer"
            app:typography="h1" />

        <LinearLayout
            android:id="@+id/infoMessagesContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_7"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1"
            android:layout_marginBottom="@dimen/keyline_5"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/dialogTitle">

            <com.duckduckgo.common.ui.view.listitem.OneLineListItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:leadingIcon="@drawable/info_solid_24"
                android:padding="@dimen/keyline_2"
                android:background="@drawable/autofill_bookmark_import_info_listitem_background"
                app:primaryText="@string/importBookmarksProgressInfoMessage1" />

            <com.duckduckgo.common.ui.view.listitem.OneLineListItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_2"
                android:padding="@dimen/keyline_2"
                android:background="@drawable/autofill_bookmark_import_info_listitem_background"
                app:leadingIcon="@drawable/info_solid_24"
                app:primaryText="@string/importBookmarksProgressInfoMessage2" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
