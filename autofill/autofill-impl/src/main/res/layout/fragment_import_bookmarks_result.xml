<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/autofillDialogContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            style="@style/AutofillDialogContentGuidelineStart" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            style="@style/AutofillDialogContentGuidelineEnd" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/successIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/bookmarks_import_128"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toTopOf="parent" />

        <com.duckduckgo.common.ui.view.text.DaxTextView
            android:id="@+id/importResultTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_5"
            android:gravity="center_horizontal"
            android:text="@string/importBookmarksSuccessTitle"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/successIcon"
            app:typography="h1" />

        <com.duckduckgo.common.ui.view.listitem.OneLineListItem
            android:id="@+id/bookmarksImportResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_5"
            android:layout_marginBottom="@dimen/keyline_2"
            android:padding="@dimen/keyline_2"
            android:background="@drawable/autofill_bookmark_import_info_listitem_background"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/importResultTitle"
            app:leadingIcon="@drawable/ic_check_green_24"
            tools:primaryText="Bookmarks: 42" />

        <com.duckduckgo.common.ui.view.text.DaxTextView
            android:id="@+id/secondaryErrorInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_4"
            android:text="@string/importBookmarksErrorGenericMessageSecondary"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/bookmarksImportResult"
            app:layout_constraintStart_toStartOf="@id/bookmarksImportResult"
            app:layout_constraintTop_toBottomOf="@id/bookmarksImportResult" />

        <com.duckduckgo.common.ui.view.button.DaxButtonPrimary
            android:id="@+id/doneButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_5"
            android:layout_marginBottom="@dimen/keyline_5"
            android:text="@string/importBookmarksFinalDoneButton"
            app:daxButtonSize="large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/secondaryErrorInfo"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
