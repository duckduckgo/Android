{
    "extends": "standard",
    "root": true,
    "parser": "@babel/eslint-parser",
    "globals": {
        "$USER_PREFERENCES$": "readonly",
        "$USER_UNPROTECTED_DOMAINS$": "readonly",
        "$CONTENT_SCOPE$": "readonly"
    },
    "parserOptions": {
        // Required for certain syntax usages
        "ecmaVersion": 2020,
        "requireConfigFile": false
    },
    "rules": {
        "indent": ["error", 4]
    },
    "env": {
        "webextensions": true,
        "browser": true,
        "jasmine": true
    }
}
