{
    "name": "duckduckgo-privacy-dashboard",
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=7.0.0"
    },
    "scripts": {
        "build": "npm run build.macos && npm run build.ios && npm run build.android && npm run build.windows && npm run build.browser",
        "build.macos": "grunt --platform=macos",
        "build.ios": "grunt --platform=ios",
        "build.android": "grunt --platform=android",
        "build.windows": "grunt --platform=windows",
        "build.browser": "grunt --platform=browser",
        "build.example": "grunt --platform=example",
        "build.test": "grunt --platform=test",
        "preview.example": "npm run build.example && http-server build/example -o html/popup.html -c-1",
        "lint": "eslint .",
        "lint.fix": "eslint . --fix",
        "test": "npm run test.unit && npm run test.e2e",
        "test.unit": "jest",
        "test.serve": "http-server ./build/test/ -c-1 --silent",
        "test.e2e": "npm run build.test && start-server-and-test 'npm run test.serve' 8080 'jest -c jest.e2e.config.js --runInBand'",
        "test.e2e.update": "npm run build.test && start-server-and-test 'npm run test.serve' 8080 'jest -c jest.e2e.config.js --runInBand --updateSnapshot'"
    },
    "devDependencies": {
        "@babel/cli": "^7.14.3",
        "@babel/core": "^7.13.15",
        "@babel/node": "^7.13.13",
        "@babel/polyfill": "^7.10.4",
        "@babel/preset-env": "^7.11.0",
        "babelify": "10.0.0",
        "duckduckgo-colors": "0.0.1",
        "eslint": "^7.19.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.3.1",
        "grunt": "1.3.0",
        "grunt-browserify": "6.0.0",
        "grunt-contrib-copy": "1.0.0",
        "grunt-exec": "3.0.0",
        "grunt-execute": "0.2.2",
        "grunt-sass": "3.1.0",
        "http-server": "^13.0.2",
        "jest": "^27.0.6",
        "jest-image-snapshot": "^4.5.1",
        "jest-playwright-preset": "^1.7.0",
        "load-grunt-tasks": "3.5.2",
        "playwright-webkit": "^1.19.1",
        "request": "^2.88.2",
        "sass": "^1.32.4",
        "standard": "10.0.3",
        "start-server-and-test": "^1.14.0"
    },
    "dependencies": {
        "@material/ripple": "^14.0.0",
        "@material/switch": "^14.0.0",
        "bel": "6.0.0",
        "deep-freeze": "0.0.1",
        "dexie": "3.0.3",
        "eventemitter2": "4.1.0",
        "i18next": "^21.6.14",
        "i18next-icu": "^2.0.3",
        "is-plain-object": "5.0.0",
        "jquery": "3.6.0",
        "node-gyp": "^8.0.0",
        "normalize.scss": "0.1.0",
        "object.values": "1.1.3",
        "parse-link-header": "1.0.0",
        "psl": "1.8.0",
        "punycode": "2.1.1",
        "regenerator-runtime": "^0.13.7",
        "require-globify": "^1.4.1",
        "runtimer": "1.0.3",
        "through2": "^2.0.5",
        "tldts": "^5.6.2",
        "underscore": "1.13.1"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "exclude": [
                        "transform-regenerator"
                    ],
                    "debug": true
                }
            ]
        ]
    }
}
