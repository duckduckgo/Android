<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/deviceShieldAppEntryIconContainer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/subtle_favicon_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/deviceShieldAppEntryIcon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_globe_gray_16dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/deviceShieldAppEntryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:orientation="vertical"
        android:singleLine="true"
        android:textColor="@color/almostBlackDark"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="Facebook" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/deviceShieldAppEntryShieldEnabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
        android:theme="@style/PopUpMenuSwitchTheme" />

</LinearLayout>