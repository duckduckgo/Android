<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?dialogBgColor"
        android:padding="@dimen/keyline_4">

    <TextView
            android:id="@+id/promoteAlwaysOnDialogTitle"
            style="@style/Widget.DuckDuckGo.Dialog.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="viewStart"
            android:text="@string/atp_PromoteAlwaysOnDialogTitle"/>

    <TextView
            android:id="@+id/promoteAlwaysOnDialogMessage"
            style="@style/TextAppearance.DuckDuckGo.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textColor="?attr/settingsMinorTextColor"
            android:layout_marginTop="@dimen/keyline_3"
            android:text="@string/atp_PromoteAlwaysOnDialogMessage"/>

    <Button
            android:id="@+id/promoteAlwaysOnDialogSettings"
            style="@style/Widget.DuckDuckGo.Button.Borderless"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialogButtonHeight"
            android:textColor="@color/cornflowerBlue"
            android:layout_marginTop="@dimen/keyline_5"
            android:text="@string/atp_PromoteAlwaysOnDialogSettings"/>
    <Button
            android:id="@+id/promoteAlwaysOnDialogLater"
            style="@style/Widget.DuckDuckGo.Button.Borderless"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialogButtonHeight"
            android:layout_marginTop="@dimen/keyline_2"
            android:text="@string/atp_PromoteAlwaysOnDialogLater"/>

    <Button
            android:id="@+id/promoteAlwaysOnDialogForget"
            android:layout_gravity="end"
            style="@style/Widget.DuckDuckGo.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dialogButtonHeight"
            android:textColor="@color/cornflowerBlue"
            android:layout_marginTop="@dimen/keyline_2"
            android:text="@string/atp_PromoteAlwaysOnDialogForget"/>

</LinearLayout>