<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/content_title"
        style="@style/DeviceShield.PrivacyReport.PastWeekCounters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/warmerGray"
        android:paddingBottom="4dp"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:text="@string/atp_ActivityPastWeekBlocked"
        tools:text="Blocked"
        />

    <TextView
        style="@style/DeviceShield.PrivacyReport.PastWeekCounters"
        android:id="@+id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        tools:text="31,306"
        />

    <TextView
        style="@style/DeviceShield.PrivacyReport.PastWeekCounters"
        android:id="@+id/content_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:text="@string/atp_ActivityPastWeekAcross"
        android:textAllCaps="false"
        tools:text="Trackers"
        />


</LinearLayout>
