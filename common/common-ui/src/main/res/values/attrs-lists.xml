<resources>

    <!--Default lists attributes-->
    <attr name="oneLineListItemStyle" format="reference"/>
    <attr name="twoLineListItemStyle" format="reference"/>

    <attr name="primaryText" format="string"/>
    <attr name="primaryTextColorOverlay" format="color"/>
    <attr name="primaryTextTruncated" format="boolean"/>
    <attr name="primaryTextType">
        <!-- Primary text color -->
        <enum name="primary" value="0" />
        <!-- Destructive text color -->
        <enum name="destructive" value="1" />
    </attr>
    <attr name="secondaryText" format="string"/>
    <attr name="secondaryTextColorOverlay" format="color"/>
    <attr name="leadingIcon" format="integer"/>
    <attr name="trailingIcon" format="integer"/>
    <attr name="showBetaPill" format="boolean"/>
    <attr name="showSwitch" format="boolean"/>
    <attr name="switchEnabled" format="boolean"/>
    <attr name="leadingIconBackground">
        <!-- No background. -->
        <enum name="none" value="0" />
        <!-- Oval shape. -->
        <enum name="circular" value="1" />
        <!-- Rectangular shape, with optional rounded corners. -->
        <enum name="rounded" value="2" />
    </attr>
    <attr name="leadingIconSize">
        <!-- Small 16dp -->
        <enum name="small" value="0" />
        <!-- Medium 24dp (default) -->
        <enum name="medium" value="1" />
        <!-- Large 32dp -->
        <enum name="large" value="2" />
        <!-- Extra Large 40dp -->
        <enum name="extra_large" value="3" />
    </attr>
    <attr name="textColorOverride" format="color"/>
    <attr name="showOverflowMenu" format="boolean"/>

    <!--Section Header Item view-->
    <declare-styleable name="SectionHeaderListItem">
        <attr name="primaryText"/>
        <attr name="showOverflowMenu"/>
    </declare-styleable>

    <!--One Line Item view-->
    <declare-styleable name="OneLineListItem">
        <attr name="primaryText"/>
        <attr name="primaryTextColorOverlay"/>
        <attr name="primaryTextTruncated"/>
        <attr name="leadingIcon"/>
        <attr name="leadingIconBackground"/>
        <attr name="leadingIconSize"/>
        <attr name="trailingIcon"/>
        <attr name="showSwitch"/>
        <attr name="switchEnabled"/>
    </declare-styleable>

    <!--Two Line Item view-->
    <declare-styleable name="TwoLineListItem">
        <attr name="primaryText"/>
        <attr name="primaryTextColorOverlay"/>
        <attr name="primaryTextTruncated"/>
        <attr name="secondaryText"/>
        <attr name="secondaryTextColorOverlay"/>
        <attr name="leadingIcon"/>
        <attr name="leadingIconBackground"/>
        <attr name="leadingIconSize"/>
        <attr name="trailingIcon"/>
        <attr name="showBetaPill"/>
        <attr name="showSwitch"/>
        <attr name="switchEnabled"/>
    </declare-styleable>

    <!-- Grid Item-->
    <attr name="gridItemType">
        <enum name="favicon" value="0" />
        <enum name="placeholder" value="1" />
        <enum name="shortcut" value="2" />
    </attr>
    <declare-styleable name="DaxGridItem">
        <attr name="primaryText"/>
        <attr name="leadingIcon"/>
        <attr name="gridItemType"/>
    </declare-styleable>

</resources>