<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menuActionHeight"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="@dimen/keyline_4">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/keyline_5"
            android:layout_height="@dimen/keyline_5"
            android:layout_gravity="center_horizontal"
            app:tint="?attr/daxColorPrimaryIcon"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_arrow_right_24" />

        <com.duckduckgo.common.ui.view.text.DaxTextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_2"
            android:gravity="center"
            android:textColor="?attr/daxColorSecondaryText"
            android:maxLines="2"
            android:ellipsize="end"
            app:typography="caption"
            tools:text="Forward" />
    </LinearLayout>
</merge>