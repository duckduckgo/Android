<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.DuckDuckGo" parent="Base.Theme.DuckDuckGo">
        <!--Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/defaultTextColor</item>
        <item name="colorPrimaryVariant">@color/cornflowerDark</item>
        <item name="colorSecondary">@color/cornflowerBlue</item>
        <item name="colorSecondaryVariant">@color/cornflowerDark</item>
        <item name="android:colorBackground">@color/almostBlackDark</item>
        <item name="colorSurface">@color/almostBlackDark</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/brownishGrayTwo</item>
    </style>

    <style name="SplashScreen" parent="AppTheme.Dark" />
</resources>
