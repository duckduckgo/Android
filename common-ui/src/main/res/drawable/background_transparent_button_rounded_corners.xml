<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/secondaryButtonPressedColor">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/cornflowerBlue"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
            <item android:state_hovered="true">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/secondaryButtonPressedColor" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/cornflowerBlue"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/disabledColor" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/disabledColor"/>
                    <corners android:radius="8dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>




