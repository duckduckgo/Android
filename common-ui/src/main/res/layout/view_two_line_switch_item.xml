<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/twoLineItemHeight"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container">

    <ImageView
        android:id="@+id/leadingIcon"
        android:layout_width="@dimen/listItemImageContainerSize"
        android:layout_height="@dimen/listItemImageContainerSize"
        android:layout_marginStart="@dimen/keyline_4"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/primaryText"
        style="@style/TextAppearance.DuckDuckGo.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/oneLineItemPadding"
        android:textColor="?attr/listItemTitleColor"
        app:layout_constraintBottom_toTopOf="@+id/secondaryText"
        app:layout_constraintStart_toEndOf="@id/leadingIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/primaryText"
        app:layout_constraintStart_toEndOf="@id/primaryText"
        app:srcCompat="@drawable/ic_beta_pill"/>

    <TextView
        android:id="@+id/secondaryText"
        style="@style/TextAppearance.DuckDuckGo.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/oneLineItemPadding"
        android:textColor="?attr/listItemSubtitleColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trailingSwitch"
        app:layout_constraintStart_toStartOf="@id/primaryText"
        app:layout_constraintTop_toBottomOf="@id/primaryText"
        tools:text="Subtitle"/>

    <com.duckduckgo.mobile.android.ui.view.SwitchView
        android:id="@+id/trailingSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/keyline_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>