<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/keyline_5"
        android:paddingBottom="@dimen/keyline_5"
        android:paddingStart="@dimen/keyline_4"
        android:paddingEnd="@dimen/keyline_4">

        <com.duckduckgo.mobile.android.ui.view.SectionHeaderTextView
            android:id="@+id/label"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Dialogs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/animated_button"
            android:text="Dialog with animated text"
            style="@style/Widget.DuckDuckGo.Button.Secondary"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/not_dimmed_button"
            android:text="Dialog not dimmed"
            style="@style/Widget.DuckDuckGo.Button.Secondary"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/dismissible_button"
            android:text="Dialog that can be dismissed without an action"
            style="@style/Widget.DuckDuckGo.Button.Secondary"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/no_hide_button"
            android:text="Dialog without hide button"
            style="@style/Widget.DuckDuckGo.Button.Secondary"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/custom_typing_button"
            android:text="Dialog with custom typing delay"
            style="@style/Widget.DuckDuckGo.Button.Secondary"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

