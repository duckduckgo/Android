<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingStart="@dimen/keyline_4"
    android:paddingTop="@dimen/keyline_5"
    android:paddingEnd="@dimen/keyline_4"
    android:paddingBottom="@dimen/keyline_5">

    <com.duckduckgo.mobile.android.ui.view.listitem.SectionHeaderListItem
        android:id="@+id/firstHeaderLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:primaryText="Notify Me (default) - contentOrientation=start / dismissIcon=true" />

    <com.duckduckgo.mobile.android.ui.notifyme.NotifyMeView
        android:id="@+id/notifyMeDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstHeaderLabel" />

    <com.duckduckgo.mobile.android.ui.view.listitem.SectionHeaderListItem
        android:id="@+id/secondHeaderLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notifyMeDefault"
        app:primaryText="Notify Me (variation) - contentOrientation=center / dismissIcon=false" />

    <com.duckduckgo.mobile.android.ui.notifyme.NotifyMeView
        android:id="@+id/notifyMeCenteredContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dismissIcon="false"
        app:contentOrientation="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondHeaderLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>