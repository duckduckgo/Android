<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingTop="@dimen/keyline_5">

    <com.duckduckgo.mobile.android.ui.view.listitem.SectionHeaderListItem
        android:id="@+id/oneLineListTitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:primaryText="Single Line Items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.duckduckgo.mobile.android.ui.view.listitem.OneLineListItem
        android:id="@+id/oneLineListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oneLineListTitle"
        app:primaryText="This is a simple item " />

    <com.duckduckgo.mobile.android.ui.view.listitem.OneLineListItem
        android:id="@+id/oneLineListItemWithImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oneLineListItem"
        app:leadingIcon="@drawable/ic_globe_gray_16dp"
        app:primaryText="Item with Leading Image" />

    <com.duckduckgo.mobile.android.ui.view.listitem.OneLineListItem
        android:id="@+id/oneLineListItemWithTrailingIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oneLineListItemWithImage"
        app:primaryText="Item With Trailing Icon"
        app:trailingIcon="@drawable/ic_menu_vertical_24" />

    <com.duckduckgo.mobile.android.ui.view.listitem.OneLineListItem
        android:id="@+id/oneLineListItemWithLeadingAndTrailingIcons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oneLineListItemWithTrailingIcon"
        app:leadingIcon="@drawable/ic_globe_gray_16dp"
        app:leadingIconBackground="circular"
        app:primaryText="Item With Leading and Trailing Icons"
        app:trailingIcon="@drawable/ic_menu_vertical_24" />

    <com.duckduckgo.mobile.android.ui.view.listitem.OneLineListItem
        android:id="@+id/oneLineListItemSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oneLineListItemWithLeadingAndTrailingIcons"
        app:primaryText="Item with Switch Item"
        app:showSwitch="true" />

    <com.duckduckgo.mobile.android.ui.view.listitem.OneLineListItem
        android:id="@+id/oneLineListSwitchItemWithLeadingIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oneLineListItemSwitch"
        app:leadingIcon="@drawable/ic_globe_gray_16dp"
        app:leadingIconBackground="rounded"
        app:primaryText="Item With Switch and Leading Icon"
        app:showSwitch="true" />

    <com.duckduckgo.mobile.android.ui.view.listitem.OneLineListItem
        android:id="@+id/oneLineListItemDisabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oneLineListSwitchItemWithLeadingIcon"
        app:primaryText="Item disabled" />

    <com.duckduckgo.mobile.android.ui.view.listitem.OneLineListItem
        android:id="@+id/oneLineListItemCustomTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oneLineListItemDisabled"
        app:primaryText="Item with custom text color"
        app:primaryTextColorOverlay="@color/red_text_color_selector" />

    <com.duckduckgo.mobile.android.ui.view.listitem.OneLineListItem
        android:id="@+id/oneLineListItemWithLongText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oneLineListItemCustomTextColor"
        app:primaryText="Item with custom text color asdasda sd asda sdasda s"/>

    <com.duckduckgo.mobile.android.ui.view.listitem.OneLineListItem
        android:id="@+id/oneLineListItemWithLongTextTruncated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oneLineListItemWithLongText"
        app:primaryText="Item with custom text color asdasda sd asda sdasda s"
        app:primaryTextTruncated="true"/>



</androidx.constraintlayout.widget.ConstraintLayout>