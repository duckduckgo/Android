<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clipToPadding="false"
              android:orientation="vertical"
              android:paddingTop="@dimen/keyline_5"
              android:paddingBottom="@dimen/keyline_5"
              android:paddingStart="@dimen/keyline_4"
              android:paddingEnd="@dimen/keyline_4">

    <com.duckduckgo.mobile.android.ui.view.SectionHeaderTextView
        android:id="@+id/label"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/primary_button"
        android:text="Primary Button"
        style="@style/Widget.DuckDuckGo.Button.Primary"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/secondary_button"
        style="@style/Widget.DuckDuckGo.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Secondary Button"
        android:layout_marginBottom="16dp"/>

    <com.duckduckgo.mobile.android.ui.view.IconButton
        android:layout_gravity="center"
        android:id="@+id/getIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_union" />

</LinearLayout>
