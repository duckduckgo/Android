<resources>

    <!--Common attributes-->
    <attr name="listItemTitleColor" format="color"/>
    <attr name="listItemSubtitleColor" format="color"/>

    <!--Single Line Item view-->
    <declare-styleable name="SingleLineListItem">
        <attr name="singleLineItemTitle" format="string" />
        <attr name="singleLineItemDrawable" format="reference" />
    </declare-styleable>

    <!--Two Line Item view-->
    <declare-styleable name="TwoLineListItem">
        <attr name="twoLineItemTitle" format="string" />
        <attr name="twoLineItemSubtitle" format="string" />
        <attr name="twoLineItemDrawable" format="reference" />
    </declare-styleable>
</resources>