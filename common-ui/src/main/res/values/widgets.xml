<resources>

    <style name="Widget"/>
    <style name="ThemeOverlay"/>

    <style name="Widget.DuckDuckGo"/>
    <style name="ThemeOverlay.DuckDuckGo"/>

    <!-- Toolbar -->
    <style name="Widget.DuckDuckGo.ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">?attr/toolbarIconColor</item>
        <item name="android:textColorPrimary">?attr/toolbarTextColor</item>
        <item name="colorControlHighlight">@color/subtleGrayTwo</item>
        <item name="colorAccent">@color/cornflowerBlue</item>
        <item name="colorControlActivated">@color/cornflowerBlue</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/subtleGrayTwo</item>
    </style>

    <style name="Widget.DuckDuckGo.PopUpOverflowMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_menu_bg</item>
    </style>

    <!-- Tabs -->
    <style name="Widget.DuckDuckGo.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <!-- List Items -->
    <style name="Widget.DuckDuckGo.OneLineListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/oneLineItemHeight</item>
    </style>

    <style name="Widget.DuckDuckGo.TwoLineListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/twoLineItemHeight</item>
    </style>

    <style name="Widget.DuckDuckGo.ListItem"/>

    <style name="Widget.DuckDuckGo.ListItem.Description" parent="TextAppearance.DuckDuckGo.Body2">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">?attr/settingsMinorTextColor</item>
    </style>

    <style name="Widget.DuckDuckGo.ListItem.EmptyHint">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">@dimen/keyline_4</item>
        <item name="android:paddingEnd">@dimen/keyline_4</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/normalTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.DuckDuckGo.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:textColorHint">?attr/omnibarHintColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Snackbar -->
    <style name="Widget.DuckDuckGo.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">1</item>
        <item name="backgroundTint">?attr/daxColorSurface</item>
    </style>

    <style name="Widget.DuckDuckGo.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/daxColorAccentBlue</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <style name="Widget.DuckDuckGo.SnackbarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?attr/daxColorPrimaryText</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.DuckDuckGo.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:background">@drawable/popup_menu_bg</item>
    </style>

    <style name="Widget.DuckDuckGo.PopupMenuItem" parent="TextAppearance.DuckDuckGo.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/popupMenuItemHeight</item>
        <item name="android:paddingEnd">@dimen/keyline_4</item>
        <item name="android:paddingStart">@dimen/keyline_4</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/browser_menu_text</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.DuckDuckGo.NavigationalIcon">
        <item name="android:background">@drawable/ripple_rectangle_rounded</item>
        <item name="android:layout_width">@dimen/popupMenuNavigationItemSize</item>
        <item name="android:layout_height">@dimen/popupMenuNavigationItemSize</item>
        <item name="android:tint">@color/primary_icon_color_selector</item>
    </style>

    <!-- Styles for App Components -->

    <style name="Widget.DuckDuckGo.MenuItemView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">@dimen/keyline_5</item>
        <item name="android:paddingTop">@dimen/keyline_3</item>
        <item name="android:paddingBottom">@dimen/keyline_3</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Section Header -->
    <style name="Widget.DuckDuckGo.SectionHeader">
        <item name="android:paddingTop">@dimen/keyline_4</item>
        <item name="android:paddingBottom">@dimen/keyline_4</item>
        <item name="android:paddingStart">@dimen/keyline_4</item>
        <item name="android:paddingEnd">@dimen/keyline_4</item>
        <item name="android:textAppearance">@style/Widget.DuckDuckGo.SectionHeader.TextAppearance</item>
    </style>

    <style name="Widget.DuckDuckGo.SectionHeader.TextAppearance" parent="TextAppearance.DuckDuckGo.Body2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/blue50</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Info Panel -->
    <style name="Widget.DuckDuckGo.InfoPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.DuckDuckGo.DaxButton.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="shapeAppearance">?shapeAppearanceSmallComponent</item>
    </style>

    <style name="Widget.DuckDuckGo.DaxButton.TextButton.Primary">
        <item name="android:textColor">@color/button_primary_text_color_selector</item>
        <item name="backgroundTint">@color/button_primary_container_selector</item>
        <item name="rippleColor">@color/button_primary_ripple_selector</item>
        <item name="iconTint">@color/button_primary_text_color_selector</item>
    </style>

    <style name="Widget.DuckDuckGo.DaxButton.TextButton.Destructive">
        <item name="android:textColor">@color/button_primary_text_color_selector</item>
        <item name="backgroundTint">@color/button_destructive_container_selector</item>
        <item name="rippleColor">@color/button_destructive_ripple_selector</item>
        <item name="iconTint">@color/button_primary_text_color_selector</item>
    </style>

    <style name="Widget.DuckDuckGo.DaxButton.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/button_secondary_text_color_selector</item>
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="strokeColor">@color/button_secondary_stroke_selector</item>
        <item name="rippleColor">@color/button_secondary_ripple_selector</item>
        <item name="iconTint">@color/button_secondary_text_color_selector</item>
    </style>

    <style name="Widget.DuckDuckGo.DaxButton.Ghost" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_secondary_text_color_selector</item>
        <item name="backgroundTint">@color/button_ghost_container_selector</item>
        <item name="rippleColor">@color/button_ghost_ripple_selector</item>
        <item name="iconTint">@color/button_secondary_text_color_selector</item>
    </style>

    <style name="Widget.DuckDuckGo.DaxButton.DestructiveGhost" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_destructive_ghost_text_color_selector</item>
        <item name="backgroundTint">@color/button_destructive_ghost_container_selector</item>
        <item name="rippleColor">@color/button_desctructive_ghost_ripple_selector</item>
        <item name="iconTint">@color/button_destructive_ghost_text_color_selector</item>
    </style>

    <style name="Widget.DuckDuckGo.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">@dimen/keyline_3</item>
        <item name="android:paddingEnd">@dimen/keyline_3</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="Widget.DuckDuckGo.Button.Primary">
        <item name="android:background">@drawable/background_blue_button_primary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.DuckDuckGo.Button.Primary.Small">
        <item name="android:layout_height">@dimen/legacyButtonSmallHeight</item>
    </style>

    <style name="Widget.DuckDuckGo.Button.Primary.Lowercase">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.DuckDuckGo.Button.Secondary">
        <item name="android:textColor">@color/cornflowerBlue</item>
        <item name="android:background">@drawable/background_transparent_button_rounded_corners</item>
    </style>

    <style name="Widget.DuckDuckGo.Button.Secondary.Small">
        <item name="android:layout_height">@dimen/legacyButtonSmallHeight</item>
    </style>

    <!-- Rename to Ghost when migration happens -->
    <style name="Widget.DuckDuckGo.Button.Borderless">
        <item name="android:textColor">@color/cornflowerBlue</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Rename to Ghost when migration happens -->
    <style name="Widget.DuckDuckGo.Button.Borderless.Small">
        <item name="android:layout_height">@dimen/legacyButtonSmallHeight</item>
    </style>

    <style name="Widget.DuckDuckGo.Button.Rounded">
        <item name="android:background">@drawable/background_blue_button_rounded</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.DuckDuckGo.Button.Secondary.Rounded">
        <item name="android:background">@drawable/background_white_button_secondary_rounded</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/cornflowerBlue</item>
    </style>

    <style name="Widget.DuckDuckGo.IconButton">
        <item name="android:background">@drawable/background_icon_button</item>
        <item name="android:padding">@dimen/keyline_5</item>
    </style>

    <style name="Widget.DuckDuckGo.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">?attr/daxColorPrimaryText</item>
        <item name="buttonTint">@color/radio_button_tint</item>
        <item name="android:padding">@dimen/keyline_3</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- SearchBarView -->
    <style name="Widget.DuckDuckGo.SearchBarView">
        <item name="android:background">@drawable/omnibar_field_background</item>
        <item name="android:layout_margin">@dimen/keyline_2</item>
        <item name="clearActionContentDescription">
            @string/searchbar_cleartextaction_content_description_default
        </item>
        <item name="searchHint">@string/searchbar_searchhint_default</item>
        <item name="upActionContentDescription">
            @string/searchbar_upaction_content_description_default
        </item>
    </style>

    <!-- MessageCta -->
    <style name="Widget.DuckDuckGo.MessageCta">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_message_cta</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginTop">@dimen/keyline_4</item>
        <item name="android:layout_marginStart">@dimen/keyline_4</item>
        <item name="android:layout_marginEnd">@dimen/keyline_4</item>
        <item name="android:layout_marginBottom">@dimen/keyline_1</item>
    </style>

    <!-- Dialogs -->
    <style name="Widget.DuckDuckGo.Dialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/Widget.DuckDuckGo.DialogCorners</item>
        <item name="android:background">?attr/daxColorSurface</item>
    </style>

    <style name="Widget.DuckDuckGo.DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dialogBorderRadius</item>
    </style>

    <!-- Dax Dialog -->
    <style name="Widget.DuckDuckGo.DaxDialogFragment" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Widget.DuckDuckGo.DaxDialog"/>

    <style name="Widget.DuckDuckGo.DaxDialog.Outline">
        <item name="cardCornerRadius">@dimen/largeShapeCornerRadius</item>
        <item name="android:backgroundTint">?attr/daxColorSurface</item>
        <item name="android:layout_marginStart">@dimen/keyline_4</item>
        <item name="android:layout_marginEnd">@dimen/keyline_4</item>
        <item name="android:layout_marginBottom">@dimen/keyline_4</item>
    </style>

    <style name="Widget.DuckDuckGo.DaxDialog.Content">
        <item name="android:paddingTop">@dimen/daxDialogContentPaddingTop</item>
        <item name="android:paddingBottom">@dimen/daxDialogContentPaddingBottom</item>
        <item name="android:paddingStart">@dimen/daxDialogContentPaddingStart</item>
        <item name="android:paddingEnd">@dimen/daxDialogContentPaddingEnd</item>
    </style>

    <!-- Text Input -->
    <style name="Widget.DuckDuckGo.TextInput"
           parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/ShapeAppearance.DuckDuckGo.SmallComponent</item>
        <item name="boxStrokeColor">@color/text_input_box_color_selector</item>
        <item name="endIconTint">?attr/daxColorPrimaryIcon</item>
        <item name="hintTextColor">@color/text_input_hint_color_selector</item>
        <item name="android:textColorHint">@color/text_input_hint_color_selector</item>
        <item name="android:theme">@style/Widget.DuckDuckGo.TextInputCursor</item>
    </style>

    <!-- The color of the cursor comes from the theme, not the widget itself -->
    <style name="Widget.DuckDuckGo.TextInputCursor">
        <item name="android:colorControlActivated">?attr/daxColorAccentBlue</item>
    </style>

    <style name="Widget.DuckDuckGo.RoundedDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/Widget.DuckDuckGo.DialogCorners</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="Widget.DuckDuckGo.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.DuckDuckGo.ModalBottomSheetStyle</item>
    </style>

    <style name="Widget.DuckDuckGo.ModalBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/Widget.DuckDuckGo.BottomSheetDialogCorners</item>
        <item name="android:backgroundTint">?attr/daxColorSurface</item>
    </style>

    <style name="Widget.DuckDuckGo.BottomSheetDialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dialogBorderRadius</item>
        <item name="cornerSizeTopLeft">@dimen/dialogBorderRadius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Switches -->
    <style name="Widget.DuckDuckGo.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.DuckDuckGo.Switch</item>
    </style>

    <style name="ThemeOverlay.DuckDuckGo.Switch" >
        <item name="trackTint">@color/switch_track_tint</item>
        <item name="thumbTint">@color/switch_thumb_tint</item>
    </style>

    <!-- Deprecated, will be deleted when all new styles are applied -->
    <style name="Widget.DuckDuckGo.Switch.White" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.DuckDuckGo.Switch.White">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray70</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <!-- Slider -->
    <style name="Widget.DuckDuckGo.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="trackHeight">@dimen/sliderTrackHeight</item>
        <item name="trackColorInactive">?attr/daxColorSliderTrackInactive</item>
        <item name="trackColorActive">?attr/daxColorSliderActive</item>
        <item name="thumbColor">?attr/daxColorSliderActive</item>
    </style>

    <!-- Dividers -->
    <style name="Widget.DuckDuckGo.HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontalDividerHeight</item>
        <item name="android:background">?attr/sectionDividerColor</item>
    </style>

    <style name="Widget.DuckDuckGo.VerticalDivider">
        <item name="android:layout_width">@dimen/verticalDividerWidth</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/sectionDividerColor</item>
    </style>

    <!-- Cards -->
    <style name="Widget.DuckDuckGo.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/daxColorSurface</item>
        <item name="shapeAppearance">@style/ShapeAppearance.DuckDuckGo.MediumComponent</item>
    </style>

</resources>