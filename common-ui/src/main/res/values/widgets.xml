<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget"/>

    <style name="Widget.DuckDuckGo"/>

    <style name="Widget.DuckDuckGo.SingleLineListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingStart">@dimen/keyline_4</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="Widget.DuckDuckGo.TwoLineListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingStart">@dimen/keyline_4</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="Widget.DuckDuckGo.ListItem"/>

    <style name="Widget.DuckDuckGo.ListItem.Description" parent="TextAppearance.DuckDuckGo.Body2">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">?attr/settingsMinorTextColor</item>
    </style>

    <style name="Widget.DuckDuckGo.ListItem.Divider">
        <item name="android:background">?attr/settingsDividerColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Widget.DuckDuckGo.ListItem.SectionTitle">
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/cornflowerBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="Widget.DuckDuckGo.ListItem.EmptyHint">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">@dimen/settingsItemHorizontalPadding</item>
        <item name="android:paddingEnd">@dimen/settingsItemHorizontalPadding</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?attr/normalTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.DuckDuckGo.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="Widget.DuckDuckGo.BottomSheet.Model" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">512dp</item>
    </style>

    <style name="Widget.DuckDuckGo.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:textColorHint">?attr/omnibarHintColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.DuckDuckGo.Snackbar" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.DuckDuckGo.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:background">@drawable/popup_menu_bg</item>
    </style>

    <style name="Widget.DuckDuckGo.PopupMenuItem" parent="TextAppearance.DuckDuckGo.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/popupMenuItemHeight</item>
        <item name="android:paddingEnd">@dimen/keyline_4</item>
        <item name="android:paddingStart">@dimen/keyline_4</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/browser_menu_text</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.DuckDuckGo.BrowserPopupMenu">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textColor">@color/browser_menu_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/popupMenuItemHeight</item>
    </style>

    <style name="Widget.DuckDuckGo.BrowserPopupMenu.Icon">
        <item name="android:tint">?attr/browserIconColorSelector</item>
        <item name="android:layout_width">@dimen/popupMenuItemHeight</item>
    </style>

    <style name="Widget.DuckDuckGo.BrowserPopupMenu.Text">
        <item name="android:paddingEnd">@dimen/keyline_4</item>
        <item name="android:paddingStart">@dimen/keyline_4</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TextAppearance.DuckDuckGo.Body1</item>
    </style>

    <style name="Widget.DuckDuckGo.BrowserPopupMenu.Text.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:paddingEnd">@dimen/keyline_2</item>
    </style>

    <style name="Widget.DuckDuckGo.Switch">
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">?attr/settingsSwitchBackgroundColor</item>
    </style>

    <style name="Widget.DuckDuckGo.Switch.Blue">
        <item name="colorControlActivated">@color/cornflowerBlue</item>
    </style>

    <style name="Widget.DuckDuckGo.Switch.Green">
        <item name="colorControlActivated">@color/cornflowerGreen</item>
    </style>

    <style name="Widget.DuckDuckGo.RoundedDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/Widget.DuckDuckGo.DialogCorners</item>
    </style>

    <style name="Widget.DuckDuckGo.DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.DuckDuckGo.InfoPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.DuckDuckGo.InfoPanel.Text" parent="TextAppearance.DuckDuckGo.Body2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/almostBlackDark</item>
    </style>

    <!-- Styles for App Components -->
    <style name="Widget.DuckDuckGo.SectionHeader">
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">@dimen/settingsItemHorizontalPadding</item>
        <item name="android:paddingEnd">@dimen/settingsItemHorizontalPadding</item>
        <item name="android:textAppearance">@style/Widget.DuckDuckGo.SectionHeader.TextAppearance</item>
    </style>

    <style name="Widget.DuckDuckGo.SectionHeader.TextAppearance" parent="TextAppearance.DuckDuckGo.Body2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/blue50</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>