<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget"/>
    <style name="Widget.DuckDuckGo"/>

    <style name="Widget.DuckDuckGo.SingleLineListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="Widget.DuckDuckGo.TwoLineListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="Widget.DuckDuckGo.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="Widget.DuckDuckGo.BottomSheet.Model" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">512dp</item>
    </style>

    <style name="Widget.DuckDuckGo.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:textColorHint">?attr/omnibarHintColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.DuckDuckGo.Snackbar" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


</resources>