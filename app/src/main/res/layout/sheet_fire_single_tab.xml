<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fireAnimationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:lottie_loop="false" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fireDialogRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_top_corners_bottom_sheet_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/keyline_4"
                android:paddingStart="@dimen/keyline_5"
                android:paddingEnd="@dimen/keyline_5"
                android:paddingBottom="@dimen/keyline_5">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/fireIcon"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:importantForAccessibility="no"
                    app:lottie_rawRes="@raw/fire_dialog_animation"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="false" />

                <com.duckduckgo.common.ui.view.text.DaxTextView
                    android:id="@+id/dialogTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keyline_2"
                    android:text="@string/singleTabFireDialogTitle"
                    app:textType="primary"
                    app:typography="h2" />

                <com.duckduckgo.common.ui.view.text.DaxTextView
                    android:id="@+id/dialogSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keyline_2"
                    android:gravity="center"
                    android:visibility="gone"
                    app:textType="secondary"
                    app:typography="body1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="40dp">

                <com.duckduckgo.common.ui.view.button.DaxButtonDestructive
                    android:id="@+id/deleteAllButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:daxButtonSize="large"
                    android:text="@string/singleTabFireDialogDeleteAll" />

                <com.duckduckgo.common.ui.view.button.DaxButtonDestructiveSecondary
                    android:id="@+id/deleteThisTabButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keyline_2"
                    app:daxButtonSize="large"
                    android:text="@string/singleTabFireDialogDeleteThisTab" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/keyline_4" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</FrameLayout>
