<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/longDescriptionContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="onboardingDefaultBrowser"
        tools:context="com.duckduckgo.app.onboarding.ui.OnboardingActivity">

    <ImageView
        android:id="@+id/background1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/onboarding_background_small_light" />

    <ImageView
        android:id="@+id/background2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/windStrokesAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/keyline_4"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarGuideline"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/bb_onboarding_wind_strokes" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/statusBarGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/daxLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="150dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:scaleX="2.15"
        android:scaleY="2.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarGuideline"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/bb_dax_logo_wink" />

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/keyline_5"
        android:layout_marginTop="@dimen/keyline_4"
        android:fontFamily="@font/pangea_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/onboardingWelcomeTitle"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daxLogo"
        android:alpha="0" />

    <include
            android:id="@+id/daxDialogCta"
            layout="@layout/pre_onboarding_dax_dialog_cta_bb"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@id/statusBarGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="600dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>