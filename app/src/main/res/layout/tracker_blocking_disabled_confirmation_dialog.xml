<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="28dp"
    android:paddingBottom="26dp">

    <ImageView
        android:id="@+id/trackerBlockingIcon"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:importantForAccessibility="no"
        android:src="@drawable/icon_tracker_blocking_disabled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        style="@style/OnboardingConfirmationDialogTitle"
        android:layout_marginTop="12dp"
        android:text="@string/onboardingOptedOutConfirmationTitle"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trackerBlockingIcon"
        app:layout_constraintWidth_max="193dp" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/OnboardingListItemSubtitle"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:text="@string/onboardingOptedOutConfirmationSubtitle"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintWidth_max="280dp" />

</androidx.constraintlayout.widget.ConstraintLayout>