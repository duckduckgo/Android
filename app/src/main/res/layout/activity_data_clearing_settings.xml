<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duckduckgo.app.firebutton.DataClearingSettingsActivity">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/include_default_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:ignore="Overdraw">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/keyline_5">

            <!-- Header Section -->
            <ImageView
                android:id="@+id/dataClearingHeaderImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/keyline_5"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/image_data_clearing" />

            <com.duckduckgo.common.ui.view.text.DaxTextView
                android:id="@+id/dataClearingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/keyline_5"
                android:layout_marginTop="@dimen/keyline_2"
                android:gravity="center"
                android:text="@string/dataClearingActivityTitle"
                app:typography="h2" />

            <com.duckduckgo.common.ui.view.text.DaxTextView
                android:id="@+id/dataClearingDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/keyline_5"
                android:layout_marginTop="@dimen/keyline_2"
                android:layout_marginBottom="@dimen/keyline_6"
                android:gravity="center"
                android:text="@string/dataClearingDescription"
                app:textType="secondary"
                app:typography="body2" />

            <com.duckduckgo.common.ui.view.divider.HorizontalDivider
                android:id="@+id/headerDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Fire Button Animation -->
            <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
                android:id="@+id/selectedFireAnimationSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/settingsFireAnimation"
                app:primaryTextTruncated="false"
                app:secondaryText="@string/settingsHeroFireAnimation" />

            <!-- Clear Duck.ai Chats -->
            <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
                android:id="@+id/clearDuckAiDataSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/settingsClearAiDataTitle"
                app:secondaryText="@string/settingsClearAiDataDeleteMessage"
                app:showSwitch="true" />

            <com.duckduckgo.common.ui.view.divider.HorizontalDivider
                android:id="@+id/fireproofSitesDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Fireproof Sites -->
            <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
                android:id="@+id/fireproofWebsites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/settingsFireproofWebsites"
                tools:secondaryText="2 sites excluded from clearing" />

            <com.duckduckgo.common.ui.view.divider.HorizontalDivider
                android:id="@+id/automaticClearingDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Automatic Data Clearing -->
            <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
                android:id="@+id/automaticDataClearingSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/dataClearingAutomaticDataClearing"
                tools:secondaryText="Off" />

            <com.duckduckgo.common.ui.view.divider.HorizontalDivider
                android:id="@+id/clearDataActionDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Clear Tabs and Data Action -->
            <com.duckduckgo.common.ui.view.listitem.OneLineListItem
                android:id="@+id/clearDataAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:leadingIcon="@drawable/ic_fire_24"
                app:primaryText="@string/fireClearAll" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
