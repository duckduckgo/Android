<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shortcuts_widget_background_daynight"
    android:orientation="vertical"
    android:padding="12dp"
    tools:ignore="DeprecatedWidgetInXml">

    <!-- Title -->
    <TextView
        android:id="@+id/widgetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="@string/shortcutsWidgetTitle"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Row 1: Duck.ai, Search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Duck.ai -->
        <LinearLayout
            android:id="@+id/shortcutDuckAi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_ai_chat_color_24"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/shortcutWidgetDuckAi"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Search -->
        <LinearLayout
            android:id="@+id/shortcutSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_find_search_color_24"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/shortcutWidgetSearch"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Row 2: Email, VPN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Email -->
        <LinearLayout
            android:id="@+id/shortcutEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_email_protection_color_24"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/shortcutWidgetEmail"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- VPN -->
        <LinearLayout
            android:id="@+id/shortcutVpn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_shortcuts_widget_vpn"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/vpnStatusIndicator"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/shortcuts_widget_status_indicator_on"
                    android:visibility="gone"
                    tools:ignore="ContentDescription"
                    tools:visibility="visible" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/shortcutWidgetVpn"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
