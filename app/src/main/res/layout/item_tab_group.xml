<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.DuckDuckGo.TabCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/keyline_2"
    app:cardCornerRadius="@dimen/mediumShapeCornerRadius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardContentsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/keyline_1">

        <!-- Group indicator dot -->
        <View
            android:id="@+id/groupIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="@dimen/keyline_2"
            android:background="@drawable/tab_group_indicator"
            app:layout_constraintBottom_toBottomOf="@id/groupName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/groupName" />

        <!-- Group name -->
        <com.duckduckgo.common.ui.view.text.DaxTextView
            android:id="@+id/groupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_2"
            android:layout_marginEnd="@dimen/keyline_2"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textIsSelectable="false"
            app:layout_constraintEnd_toStartOf="@id/selectionIndicator"
            app:layout_constraintStart_toEndOf="@id/groupIndicator"
            app:layout_constraintTop_toTopOf="parent"
            app:typography="h4"
            tools:text="News" />

        <!-- Selection indicator (for selection mode) -->
        <ImageView
            android:id="@+id/selectionIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/keyline_2"
            android:contentDescription="@string/tabNotSelectedIndicator"
            android:src="@drawable/ic_shape_circle_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/groupName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/groupName"
            tools:visibility="visible" />

        <!-- Overflow menu button (for normal mode) -->
        <ImageView
            android:id="@+id/overflowMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_circular_ripple"
            android:contentDescription="@string/tabGroupMenuContentDescription"
            android:padding="8dp"
            android:src="@drawable/ic_menu_vertical_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/daxColorTabHighlight" />

        <!-- Preview 1 (top-left) -->
        <ImageView
            android:id="@+id/preview1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/keyline_2"
            android:layout_marginEnd="2dp"
            android:background="@drawable/tab_group_preview_placeholder"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toStartOf="@id/preview2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/groupName" />

        <!-- Preview 2 (top-right) -->
        <ImageView
            android:id="@+id/preview2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="@dimen/keyline_2"
            android:background="@drawable/tab_group_preview_placeholder"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/preview1"
            app:layout_constraintTop_toBottomOf="@id/groupName" />

        <!-- Preview 3 (bottom-left) -->
        <ImageView
            android:id="@+id/preview3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/tab_group_preview_placeholder"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/preview4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/preview1" />

        <!-- Preview 4 (bottom-right) -->
        <ImageView
            android:id="@+id/preview4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/tab_group_preview_placeholder"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/preview3"
            app:layout_constraintTop_toBottomOf="@id/preview2" />

        <!-- Additional count overlay (positioned over preview4) -->
        <FrameLayout
            android:id="@+id/additionalCountContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/preview4"
            app:layout_constraintEnd_toEndOf="@id/preview4"
            app:layout_constraintStart_toStartOf="@id/preview4"
            app:layout_constraintTop_toTopOf="@id/preview4"
            tools:visibility="visible">

            <com.duckduckgo.common.ui.view.text.DaxTextView
                android:id="@+id/additionalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                app:typography="h4"
                tools:text="+8" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>