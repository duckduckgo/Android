<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/daxCtaContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:alpha="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.duckduckgo.common.ui.view.TypeAnimationTextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Typography.BB.H1"
            android:textColor="@color/bbColorPrimaryText"
            tools:text="@string/highlightsPreOnboardingAddressBarTitle"
            tools:ignore="InvalidColorAttribute" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/highlightsPreOnboardingAddressBarTitle"
            android:textAppearance="@style/Typography.BB.H1"
            android:visibility="invisible"
            tools:ignore="DeprecatedWidgetInXml" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/keyline_4">

        <ImageView
            android:id="@+id/option1Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            tools:alpha="1"
            tools:src="@drawable/bb_address_bar_top_light" />

        <ImageView
            android:id="@+id/option2Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0" />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_6"
        android:minHeight="56dp"
        android:background="@drawable/background_preonboarding_option_bb">

        <ImageView
            android:id="@+id/option1Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_address_bar_position_top_bb"
            app:tint="@color/preonboarding_address_bar_position_icon_bb"
            tools:ignore="InvalidColorAttribute" />

        <TextView
            android:id="@+id/option1Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_3"
            android:layout_marginTop="@dimen/keyline_4"
            android:text="@string/highlightsPreOnboardingAddressBarOption1Title"
            android:fontFamily="@font/pangea_regular"
            android:includeFontPadding="false"
            android:textSize="18sp"
            android:textColor="@color/bbColorPrimaryText"
            app:layout_constraintStart_toEndOf="@id/option1Icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DeprecatedWidgetInXml,InvalidColorAttribute" />

        <TextView
            android:id="@+id/option1Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_3"
            android:layout_marginBottom="@dimen/keyline_4"
            android:fontFamily="@font/pangea_regular"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:textColor="@color/bbColorSecondaryText"
            android:text="@string/highlightsPreOnboardingAddressBarOption1Description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/option1Icon"
            app:layout_constraintTop_toBottomOf="@id/option1Title"
            tools:ignore="DeprecatedWidgetInXml,InvalidColorAttribute" />

        <com.duckduckgo.common.ui.view.button.RadioButton
            android:id="@+id/option1Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-12dp"
            android:checked="true"
            android:clickable="false"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_4"
        android:minHeight="56dp"
        android:background="@drawable/background_preonboarding_option_bb">

        <ImageView
            android:id="@+id/option2Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_address_bar_position_bottom_bb"
            app:tint="@color/preonboarding_address_bar_position_icon_bb"
            tools:ignore="InvalidColorAttribute" />

        <TextView
            android:id="@+id/option2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_3"
            android:layout_marginTop="@dimen/keyline_4"
            android:fontFamily="@font/pangea_regular"
            android:includeFontPadding="false"
            android:textSize="18sp"
            android:textColor="@color/bbColorPrimaryText"
            android:text="@string/highlightsPreOnboardingAddressBarOption2Title"
            app:layout_constraintStart_toEndOf="@id/option2Icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DeprecatedWidgetInXml,InvalidColorAttribute" />

        <TextView
            android:id="@+id/option2Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_3"
            android:layout_marginBottom="@dimen/keyline_4"
            android:fontFamily="@font/pangea_regular"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:textColor="@color/bbColorSecondaryText"
            android:text="@string/highlightsPreOnboardingAddressBarOption2Description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/option2Icon"
            app:layout_constraintTop_toBottomOf="@id/option2Title"
            tools:ignore="DeprecatedWidgetInXml,InvalidColorAttribute" />

        <com.duckduckgo.common.ui.view.button.RadioButton
            android:id="@+id/option2Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-12dp"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>