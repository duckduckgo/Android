<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/searchNotificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stickySearchPromptNotificationTitle"
        style="@style/TextAppearance.Compat.Notification.Title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:elevation="2dp"
        android:background="@drawable/search_notification_prompt_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/logo_mini" />

        <TextView
            android:id="@+id/searchInputBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:text="@string/searchWidgetTextHint"
            android:textSize="14sp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/search"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_widget_loupe_gunmetal_24dp" />

    </LinearLayout>



</LinearLayout>