<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.duckduckgo.common.ui.view.TypeAnimationTextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Typography.Buck.H1"
            android:textColor="@color/buckColorPrimaryText"
            tools:text="@string/preOnboardingDaxDialog3Title"
            tools:ignore="InvalidColorAttribute" />

        <TextView
            android:id="@+id/dialogTitleInvisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Typography.Buck.H1"
            android:textColor="@color/buckColorPrimaryText"
            android:visibility="invisible"
            tools:ignore="DeprecatedWidgetInXml,InvalidColorAttribute" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_4">

        <com.duckduckgo.common.ui.view.TypeAnimationTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Typography.Buck.Body1"
            android:textColor="@color/buckColorPrimaryText"
            tools:text="@string/preOnboardingDaxDialog3Text"
            tools:ignore="InvalidColorAttribute" />

        <TextView
            android:id="@+id/descriptionInvisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Typography.Buck.Body1"
            android:textColor="@color/buckColorPrimaryText"
            android:visibility="invisible"
            tools:ignore="DeprecatedWidgetInXml,InvalidColorAttribute" />

    </FrameLayout>

</LinearLayout>