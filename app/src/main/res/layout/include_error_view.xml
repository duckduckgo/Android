<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/errorLayout"
    android:background="?attr/daxColorSurface"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/yeti_icon"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="60dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_yeti_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.duckduckgo.mobile.android.ui.view.text.DaxTextView
            android:id="@+id/error_title"
            app:typography="h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/keyline_7"
            android:layout_marginTop="@dimen/keyline_2"
            android:breakStrategy="balanced"
            android:gravity="center"
            android:text="@string/webViewErrorTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yeti_icon" />

        <com.duckduckgo.mobile.android.ui.view.text.DaxTextView
            android:id="@+id/error_message"
            app:textType="secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/keyline_4"
            android:layout_marginTop="@dimen/keyline_4"
            android:gravity="center"
            tools:text="@string/webViewErrorNoConnection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="@dimen/keyline_5"
            app:layout_constraintTop_toBottomOf="@+id/error_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>