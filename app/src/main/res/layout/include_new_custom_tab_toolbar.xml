<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customTabToolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/customTabCloseIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="6dp"
        android:background="@drawable/selectable_item_rounded_corner_background"
        android:importantForAccessibility="no"
        android:padding="@dimen/keyline_1"
        app:srcCompat="@drawable/ic_close_24" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/customToolbarContainer"
        style="@style/Widget.DuckDuckGo.CustomToolbarCardView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <FrameLayout
            android:id="@+id/customTabInnerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/animatedIconBackgroundView"
                android:layout_width="@dimen/omnibarCookieAnimationBannerHeight"
                android:layout_height="?attr/cookiesAnimationHeight"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="@dimen/keyline_1"
                android:alpha="0"
                android:background="@drawable/animated_icon_dummy_background" />

            <FrameLayout
                android:id="@+id/customTabSceneRoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="16dp"
                android:visibility="gone">
            </FrameLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/trackersAnimation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="@dimen/keyline_2"
                android:importantForAccessibility="no"
                android:paddingStart="@dimen/keyline_4"
                android:saveEnabled="false"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="false" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/customTabShieldIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:importantForAccessibility="no" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/addressBarTrackersBlockedAnimationShieldIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:saveEnabled="false"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/address_bar_trackers_animation_shield" />

            <ImageView
                android:id="@+id/customTabDuckPlayerIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_video_player_color_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/daxIcon"
                android:layout_width="@dimen/toolbarIconSize"
                android:layout_height="@dimen/toolbarIconSize"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/keyline_3"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_dax_icon"
                tools:visibility="visible" />

            <com.duckduckgo.common.ui.view.text.DaxTextView
                android:id="@+id/customTabDomain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="52dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:visibility="gone"
                app:typography="body2"
                tools:text="www.example.com"
                tools:visibility="visible" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
