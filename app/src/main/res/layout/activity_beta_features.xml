<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.duckduckgo.app.beta.BetaFeaturesActivity">

    <include layout="@layout/include_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="@dimen/settingsItemHorizontalPadding"
        android:layout_marginEnd="@dimen/settingsItemHorizontalPadding"
        android:layout_marginBottom="8dp"
        android:text="@string/betaFeaturesDescription"
        android:textColor="?attr/settingsMinorTextColor"
        android:textSize="14sp"
        android:textStyle="normal" />

    <View
        style="@style/SettingsGroupDivider"/>

    <TextView
        android:id="@+id/emailTitle"
        style="@style/SettingsSectionTitle"
        android:text="@string/betaFeaturesEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.duckduckgo.app.settings.SettingsOptionWithSubtitle
        android:id="@+id/emailSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/betaFeaturesEmailProtectionTitle"
        app:subtitle="@string/betaFeaturesEmailProtectionSubtitleWaitlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/emailSettingDescription"
        style="@style/SettingsMinorText"
        android:layout_marginTop="8dp"
        android:text="@string/betaFeaturesEmailProtectionDescription" />

</LinearLayout>