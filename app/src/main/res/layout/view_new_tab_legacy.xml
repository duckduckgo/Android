<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.duckduckgo.app.browser.indonesiamessage.IndonesiaNewTabSectionView
        android:id="@+id/indonesiaNewTabSectionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.duckduckgo.mobile.android.vpn.ui.newtab.AppTrackingProtectionStateView
        android:id="@+id/appTrackingProtectionStateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ddgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/homeTabDdgLogoTopMargin"
            android:alpha="0"
            android:text="Revenge: Rise From the Ashes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/daxColorPrimaryText"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.duckduckgo.common.ui.view.MessageCta
            android:id="@+id/messageCta"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="600dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.duckduckgo.savedsites.impl.newtab.FavouritesNewTabSectionView
        android:id="@+id/focusedFavourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isExpandable="false"
        app:showPlaceholders="false"
        app:favoritesPlacement="new_tab_page"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/game1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_game_controller_24"
                app:tint="?attr/daxColorPrimaryText"
                android:contentDescription="2048"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2048"
                android:textColor="?attr/daxColorPrimaryText"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_game_controller_24"
                app:tint="?attr/daxColorPrimaryText"
                android:contentDescription="Pacman"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pacman"
                android:textColor="?attr/daxColorPrimaryText"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_game_controller_24"
                app:tint="?attr/daxColorPrimaryText"
                android:contentDescription="Snake"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snake"
                android:textColor="?attr/daxColorPrimaryText"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_game_controller_24"
                app:tint="?attr/daxColorPrimaryText"
                android:contentDescription="Tetris"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tetris"
                android:textColor="?attr/daxColorPrimaryText"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>