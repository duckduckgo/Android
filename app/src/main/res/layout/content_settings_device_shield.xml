<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsSectionGeneral"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/deviceShieldTitle"
        style="@style/SettingsSectionTitle"
        android:text="@string/deviceShield"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/deviceShieldToggle"
        style="@style/SettingsSwitch"
        android:text="@string/deviceShieldBlockTrackers"
        android:theme="@style/SettingsSwitchTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deviceShieldTitle" />

    <com.duckduckgo.app.settings.SettingsOptionWithSubtitle
        android:id="@+id/deviceShieldExcludedAppsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deviceShieldToggle"
        app:subtitle="TODO"
        app:title="@string/deviceShieldExcludedApps" />

</androidx.constraintlayout.widget.ConstraintLayout>