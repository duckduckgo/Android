<!-- res/layout/custom_dropdown_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- This is your custom dropdown item content -->
    <TextView
        android:id="@+id/dropdownItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Pointer arrow -->
    <ImageView
        android:id="@+id/pointerArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@color/ic_launcher_background"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/safe_gaze_arrow" />
</LinearLayout>
