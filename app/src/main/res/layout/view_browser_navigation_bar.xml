<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/preferredNavigationBarColor"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="14dp"
    android:paddingTop="@dimen/experimentalNavigationBarPaddingTopWhenStandalone"
    android:paddingBottom="@dimen/experimentalNavigationBarPaddingBottom"
    tools:parentTag="androidx.coordinatorlayout.widget.CoordinatorLayout">

    <FrameLayout
        android:id="@+id/backArrowButton"
        android:layout_width="@dimen/bottomNavIconContainer"
        android:layout_height="@dimen/bottomNavIconContainer"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/backArrowIconImageView"
            android:layout_width="@dimen/bottomNavIcon"
            android:layout_height="@dimen/bottomNavIcon"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_left_24e" />
    </FrameLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/forwardArrowButton"
        android:layout_width="@dimen/bottomNavIconContainer"
        android:layout_height="@dimen/bottomNavIconContainer"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/forwardArrowIconImageView"
            android:layout_width="@dimen/bottomNavIcon"
            android:layout_height="@dimen/bottomNavIcon"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_right_24e" />
    </FrameLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/fireButton"
        android:layout_width="@dimen/bottomNavFireIconContainerWidth"
        android:layout_height="@dimen/bottomNavFireIconContainerHeight"
        android:background="@drawable/bottom_nav_fire_button_background"
        android:foreground="@drawable/bottom_nav_fire_button_foreground">

        <ImageView
            android:id="@+id/fireIconImageView"
            android:layout_width="@dimen/bottomNavIcon"
            android:layout_height="@dimen/bottomNavIcon"
            android:layout_gravity="center"
            android:src="@drawable/ic_fire_new_24e" />
    </FrameLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/tabsButton"
        android:layout_width="@dimen/bottomNavIconContainer"
        android:layout_height="@dimen/bottomNavIconContainer"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/tabsImageView"
            android:layout_width="@dimen/bottomNavIcon"
            android:layout_height="@dimen/bottomNavIcon"
            android:layout_gravity="center"
            android:src="@drawable/ic_tab_switcher_experiment" />
    </FrameLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/menuButton"
        android:layout_width="@dimen/bottomNavIconContainer"
        android:layout_height="@dimen/bottomNavIconContainer"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/menuIconImageView"
            android:layout_width="@dimen/bottomNavIcon"
            android:layout_height="@dimen/bottomNavIcon"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu_vertical_24"
            app:tint="?daxColorNavigationBarIconEnabled" />
    </FrameLayout>

</LinearLayout>
