<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/preferredNavigationBarColor"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="16dp">

    <FrameLayout
        android:id="@+id/backArrowButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/backArrowIconImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/keyline_2"
            android:src="@drawable/ic_arrow_left_24e" />
    </FrameLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/forwardArrowButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/forwardArrowIconImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/keyline_2"
            android:src="@drawable/ic_arrow_right_24e" />
    </FrameLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/fireButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/fireIconImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/keyline_2"
            android:src="@drawable/ic_fire_new_24e" />
    </FrameLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.duckduckgo.app.browser.tabswitcher.ExperimentalTabSwitcherButton
        android:id="@+id/tabsButton"
        android:layout_width="@dimen/toolbarIcon"
        android:layout_height="@dimen/toolbarIcon"
        android:layout_marginHorizontal="@dimen/keyline_0"
        android:background="?selectableItemBackgroundBorderless"
        android:paddingBottom="@dimen/keyline_2"
        android:paddingHorizontal="@dimen/keyline_2"
        android:paddingTop="10dp"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/menuButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/menuIconImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/keyline_2"
            app:tint="?daxColorNavigationBarIconEnabled"
            android:src="@drawable/ic_menu_vertical_24" />
    </FrameLayout>

</LinearLayout>
