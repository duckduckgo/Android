<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.duckduckgo.app.privacydashboard.PrivacyDashboardActivity"
        tools:showIn="@layout/activity_privacy_dashboard">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/privacyGrade"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:background="@color/subtleGrey">

            <ImageView
                android:id="@+id/gradeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/privacyGradeContentDescription"
                android:paddingBottom="12dp"
                android:paddingTop="20dp"
                android:src="@drawable/privacy_grade_unknown"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/domain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/almostBlack"
                android:textIsSelectable="true"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gradeImage"
                tools:text="theatlantic.com" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:letterSpacing="0.14"
                android:text="@string/privacyProtectionState"
                android:textColor="@color/warmGrey"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/domain" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/privacyGrade">

            <ImageView
                android:id="@+id/httpsIcon"
                android:src="@drawable/dashboard_https_good"
                app:layout_constraintBottom_toBottomOf="@id/httpsText"
                app:layout_constraintTop_toTopOf="@id/httpsText"
                style="@style/dashboardEntryIcon" />

            <TextView
                android:id="@+id/httpsText"
                app:layout_constraintStart_toEndOf="@id/httpsIcon"
                tools:text="8 Tracker Networks Blocked"
                style="@style/dashboardEntryText" />

            <ImageView
                android:id="@+id/networksIcon"
                android:src="@drawable/dashboard_networks_blocked"
                app:layout_constraintBottom_toBottomOf="@id/networksText"
                app:layout_constraintTop_toTopOf="@id/networksText"
                style="@style/dashboardEntryIcon" />

            <TextView
                android:id="@+id/networksText"
                app:layout_constraintTop_toBottomOf="@id/httpsText"
                app:layout_constraintStart_toEndOf="@id/networksIcon"
                tools:text="8 Tracker Networks Blocked"
                style="@style/dashboardEntryText" />


            <ImageView
                android:id="@+id/majorNetworksIcon"
                android:src="@drawable/dashboard_major_networks_blocked"
                app:layout_constraintBottom_toBottomOf="@id/majorNetworksText"
                app:layout_constraintTop_toTopOf="@id/majorNetworksText"
                style="@style/dashboardEntryIcon" />

            <TextView
                android:id="@+id/majorNetworksText"
                app:layout_constraintTop_toBottomOf="@id/networksText"
                app:layout_constraintStart_toEndOf="@id/majorNetworksIcon"
                tools:text="3 Major Tracker Networks Blocked"
                style="@style/dashboardEntryText" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/midGreen"
            app:layout_constraintTop_toBottomOf="@id/review">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:paddingEnd="19dp"
                android:paddingStart="19dp"
                android:text="@string/privacyProtectionToggle"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>


</ScrollView>
