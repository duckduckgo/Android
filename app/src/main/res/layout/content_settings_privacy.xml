<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsSectionPrivacy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.duckduckgo.mobile.android.ui.view.listitem.SectionHeaderListItem
        android:id="@+id/settingsPrivacyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/settingsHeadingPrivacy"/>

    <com.duckduckgo.mobile.android.ui.view.listitem.OneLineListItem
        android:id="@+id/setAsDefaultBrowserSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/settingsDefaultBrowserEnabled"
        app:showSwitch="true"/>

    <com.duckduckgo.mobile.android.ui.view.listitem.TwoLineListItem
        android:id="@+id/privateSearchSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryTextTruncated="false"
        app:primaryText="@string/settingsPrivateSearchTitle"
        app:secondaryText="@string/settingsPrivateSearchDescription" />

    <com.duckduckgo.mobile.android.ui.view.listitem.TwoLineListItem
        android:id="@+id/webTrackingProtectionSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryTextTruncated="false"
        app:primaryText="@string/settingsWebTrackingProtectionTitle"
        app:secondaryText="@string/settingsWebTrackingProtectionDescription" />

    <com.duckduckgo.mobile.android.ui.view.listitem.TwoLineListItem
        android:id="@+id/emailSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/settingsEmailProtectionTitle"
        app:primaryTextTruncated="false"
        app:secondaryText="@string/settingsEmailProtectionSubtitle"
        app:showBetaPill="true" />

    <com.duckduckgo.mobile.android.ui.view.listitem.TwoLineListItem
        android:id="@+id/vpnSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/atp_SettingsTitle"
        app:primaryTextTruncated="false"
        app:secondaryText="@string/atp_SettingsDeviceShieldDisabled"
        app:showBetaPill="true" />

    <com.duckduckgo.mobile.android.ui.view.listitem.TwoLineListItem
        android:id="@+id/netpPSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/netpSettingsTitle"
        app:secondaryText="@string/atp_SettingsDeviceShieldDisabled"
        app:showBetaPill="true" />

</LinearLayout>
