<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/daxCtaContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/keyline_4"
    tools:alpha="1"
    tools:background="@drawable/onboarding_background_bb_small_light">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/keyline_4"
        android:layout_marginTop="@dimen/keyline_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_dax_icon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/daxDialogDismissButton"
        style="@style/Widget.DuckDuckGo.FloatingActionButton.Circular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-10dp"
        android:contentDescription="@null"
        android:elevation="@dimen/keyline_2"
        app:backgroundTint="@color/bbColorButtonFAB"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@id/cardView"
        app:srcCompat="@drawable/ic_close_24"
        app:tint="?attr/daxColorPrimaryIcon"
        tools:ignore="InvalidColorAttribute" />

    <com.duckduckgo.common.ui.view.shape.BBCardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/keyline_4"
        android:layout_marginTop="@dimen/keyline_2"
        android:layout_marginBottom="@dimen/keyline_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintWidth_max="600dp"
        app:topRightCornerRadius="40dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/keyline_6">

                <ImageView
                    android:id="@+id/headerImage"
                    android:layout_width="60dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/keyline_4"
                    android:alpha="0"
                    android:visibility="gone"
                    app:srcCompat="@drawable/experiment_feather"
                    tools:alpha="1"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/daxBubbleDialogTitle"
                    style="@style/Typography.BB.H1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bbColorPrimaryText"
                    tools:text="@string/onboardingSearchDaxDialogTitle" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keyline_1">

                    <TextView
                        android:id="@+id/hiddenTextCta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        app:typography="body1"
                        tools:text="@string/onboardingSearchDaxDialogDescription"
                        tools:visibility="visible" />

                    <com.duckduckgo.common.ui.view.TypeAnimationTextView
                        android:id="@+id/dialogTextCta"
                        style="@style/Typography.BB.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:textColor="@color/bbColorSecondaryText" />
                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/daxDialogOption1"
                    style="@style/Widget.DuckDuckGo.BBButton.Option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keyline_2"
                    android:alpha="0"
                    android:gravity="start|center_vertical"
                    android:text="@string/onboardingSearchDaxDialogOption1"
                    app:icon="@drawable/ic_find_search_16"
                    tools:alpha="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/daxDialogOption2"
                    style="@style/Widget.DuckDuckGo.BBButton.Option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:alpha="0"
                    android:gravity="start|center_vertical"
                    android:text="@string/onboardingSearchDaxDialogOption2"
                    app:icon="@drawable/ic_find_search_16"
                    tools:alpha="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/daxDialogOption3"
                    style="@style/Widget.DuckDuckGo.BBButton.Option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:alpha="0"
                    android:gravity="start|center_vertical"
                    android:text="@string/onboardingSearchDaxDialogOption4"
                    app:icon="@drawable/ic_wand_16"
                    tools:alpha="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/primaryCta"
                    style="@style/Widget.DuckDuckGo.BBButton.TextButton.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/keyline_2"
                    android:visibility="gone"
                    app:daxButtonSize="large"
                    tools:text="Primary Cta"
                    tools:visibility="visible" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/secondaryCta"
                    style="@style/Widget.DuckDuckGo.BBButton.TextButton.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:daxButtonSize="large"
                    tools:text="Secondary Cta"
                    tools:visibility="visible" />

            </LinearLayout>
        </ScrollView>
    </com.duckduckgo.common.ui.view.shape.BBCardView>
</androidx.constraintlayout.widget.ConstraintLayout>