<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/daxCtaContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/shield_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bb_shield"
        android:alpha="0" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Typography.BB.H1"
            android:gravity="center"
            android:text="@string/highlightsPreOnboardingDaxDialog1TitleBb"
            android:visibility="invisible" />

        <com.duckduckgo.common.ui.view.TypeAnimationTextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Typography.BB.H1"
            android:textColor="@color/buckColorPrimaryText"
            android:gravity="center" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>