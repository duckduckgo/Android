<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/trackersTopDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/keyline_5"
        android:layout_marginEnd="@dimen/keyline_5"
        android:layout_marginBottom="@dimen/keyline_5"
        android:layout_marginTop="@dimen/keyline_3"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/trackersSectionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/keyline_5"
        android:paddingEnd="@dimen/keyline_5"
        android:textAlignment="center"
        tools:text="We blocked the following third-party domains' tracking requests from loading." />

    <TextView
        android:id="@+id/trackersSectionLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/keyline_5"
        android:paddingTop="@dimen/keyline_1"
        android:paddingEnd="@dimen/keyline_5"
        android:textAlignment="center"
        android:visibility="gone"
        tools:text="Learn more"
        tools:visibility="visible" />

    <View
        android:id="@+id/trackersBottomDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/keyline_5"
        android:layout_marginTop="@dimen/keyline_5"
        android:layout_marginEnd="@dimen/keyline_5"
        android:background="@color/divider" />
</LinearLayout>
