<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/settingsSectionCompleteSetup"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/keyline_4"
        app:layout_goneMarginBottom="@dimen/keyline_4"
        android:layout_height="wrap_content">

    <com.duckduckgo.common.ui.view.listitem.SectionHeaderListItem
            android:id="@+id/settingsCompleteSetupTitle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:primaryText="@string/settingsHeadingCompleteSetup"/>

    <LinearLayout
            android:id="@+id/settingsCompleteFeaturesContainer"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settingsCompleteSetupTitle"/>

    <com.duckduckgo.common.ui.view.divider.HorizontalDivider
        android:id="@+id/settingsCompleteSetupSectionBottomDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settingsCompleteFeaturesContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>