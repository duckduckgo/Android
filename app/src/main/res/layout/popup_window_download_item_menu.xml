<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_menu_bg">

    <TextView
        android:id="@+id/share"
        style="@style/Widget.DuckDuckGo.PopupMenuItem"
        android:minWidth="198dp"
        android:text="@string/downloadsItemMenuShare" />

    <TextView
        android:id="@+id/delete"
        style="@style/Widget.DuckDuckGo.PopupMenuItem"
        android:minWidth="198dp"
        android:text="@string/downloadsItemMenuDelete" />

    <TextView
        android:id="@+id/cancel"
        style="@style/Widget.DuckDuckGo.PopupMenuItem"
        android:minWidth="198dp"
        android:text="@string/downloadsItemMenuCancel" />

</LinearLayout>
