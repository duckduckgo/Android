<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="24dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/clearAllOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_fire_glyph_24dp"
        android:drawablePadding="24dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:paddingBottom="34dp"
        android:text="@string/fire_clear_all"
        android:textColor="@color/brickOrange"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/cancelOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_clear_black_24px"
        android:drawablePadding="24dp"
        android:drawableTint="@color/brownishGray"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="@string/fire_cancel"
        android:textColor="@color/brownishGray"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/clearAllOption" />

</android.support.constraint.ConstraintLayout>