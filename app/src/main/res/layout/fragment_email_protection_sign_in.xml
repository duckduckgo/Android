<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/headerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/contact_us" />

        <TextView
            android:id="@+id/statusTitle"
            style="@style/TextAppearance.DuckDuckGo.Headline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="?attr/settingsItemTextColor"
            android:textAlignment="center"
            android:text="@string/emailProtectionStatusTitleJoin" />

        <TextView
            android:id="@+id/emailPrivacyDescription"
            style="@style/TextAppearance.DuckDuckGo.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="?attr/settingsMinorTextColor"
            android:text="@string/emailProtectionDescriptionJoin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/waitListButton"
                style="@style/Widget.DuckDuckGo.Button.Primary.Lowercase"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emailProtectionWaitlistCta" />

            <Button
                android:id="@+id/getStartedButton"
                style="@style/Widget.DuckDuckGo.Button.Primary.Lowercase"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emailProtectionGetStartedCta" />

            <Button
                android:id="@+id/inviteCodeButton"
                style="@style/Widget.DuckDuckGo.Button.Secondary"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emailProtectionInviteCodeCta" />

            <Button
                android:id="@+id/duckAddressButton"
                style="@style/Widget.DuckDuckGo.Button.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emailProtectionDuckAddressCta" />
        </LinearLayout>


        <TextView
            android:id="@+id/footerDescription"
            style="@style/TextAppearance.DuckDuckGo.Body2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="35dp"
            android:gravity="bottom|center_horizontal"
            android:textColor="?attr/settingsMinorTextColor"
            android:text="@string/emailProtectionFooterDescription" />

    </LinearLayout>

</ScrollView>
