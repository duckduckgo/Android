<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/keyline_2"
    app:cardCornerRadius="10dp"
    tools:ignore="InvalidColorAttribute">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardContentsContainer"
        android:background="@drawable/background_animated_tile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selectable_circular_ripple"
            android:contentDescription="@string/closeContentDescription"
            android:padding="@dimen/keyline_2"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close_24_small" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/shieldAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toTopOf="@+id/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/tab_shield" />

        <TextView
            android:id="@+id/text"
            style="@style/Typography.DuckDuckGo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/keyline_4"
            android:layout_marginTop="@dimen/keyline_1"
            android:layout_marginBottom="20dp"
            android:textColor="@color/green70"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shieldAnimation"
            tools:ignore="DeprecatedWidgetInXml,SpUsage"
            tools:text="93 trackers blocked in the last 7 days" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>