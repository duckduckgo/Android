<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dataClearingGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:background="#B3F"
        style="@style/OnboardingListItem"
        app:layout_constraintEnd_toEndOf="@id/browsingProtectionGroup"
        app:layout_constraintStart_toStartOf="@id/browsingProtectionGroup"
        app:layout_constraintTop_toBottomOf="@id/privateSearchGroup">

        <TextView
            android:id="@+id/dataClearingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="3sp"
            android:text="@string/unifiedOnboardingDataClearingTitle"
            android:textColor="@color/almostBlack"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dataClearingSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/unifiedOnboardingDataClearingSubtitle"
            android:textColor="@color/brownishGrayTwo"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/dataClearingTitle"
            app:layout_constraintTop_toBottomOf="@id/dataClearingTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</merge>