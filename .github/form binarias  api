SYMBOL = "BTCUSDT"
INTERVAL = "15m"  # 1m, 5m, 15m, 1h, etc.

RSI_BUY = 30
RSI_SELL = 70

CHECK_INTERVAL = 900  # segundos (15 min)

# ==========================
# LOGGING
